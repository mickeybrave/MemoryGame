@page
@model MemoryGame.Pages.Lists.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    var header = Model.Header + " " + Model.List.Caption;
}
<h2> @header</h2>
<div>
    <h4>List</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.List.Caption)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.List.Caption)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.List.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
