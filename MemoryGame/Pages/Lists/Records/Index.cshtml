@page "/Lists/{id}/Records/"
@model MemoryGame.Pages.Records.IndexModel

@{
    ViewData["Title"] = "All records in " + Model.Header;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    var header = "All records in " + Model.Header; 
}
<h2> @header</h2>
<p>
    <a asp-page="Create">Create New</a> |
    <a asp-page="../Index">Back to List</a>
</p>
<form>
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" class="btn btn-primary"/>
        <input type="submit" value="Reset" class="btn btn-danger" onClick="this.form.reset()" />
    </p>
</form>
<a class="btn btn-info" asp-page="./Game" asp-route-id="@Model.ID"> Play the Game</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Translation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Record)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Translation)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" asp-route-listId="@item.ListId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="../Index">Back to List</a>
</div>

