@page
@model MemoryGame.Pages.ConfigurationModel

@{
    ViewData["Title"] = "Configuration";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Configuration</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Config.ID" />
            <div class="form-group">
                <label class="control-label">The Game Direction</label>
                <select asp-for="@Model.Config.IsFromForeignLanguage" class="form-control" asp-items="Model.GameDirections"></select>
                <span asp-validation-for="@Model.Config.IsFromForeignLanguage" class="text-danger"></span>
            </div>
            
           
            <div class="form-group">
                <label asp-for="Config.BestScore" class="control-label"></label>
                <input readonly="readonly" asp-for="Config.BestScore" class="form-control" />
                <span asp-validation-for="Config.BestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" asp-for="@Model.Config.UserId" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
