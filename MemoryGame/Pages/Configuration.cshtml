@page
@model MemoryGame.Pages.ConfigurationModel

@{
    ViewData["Title"] = "Configuration";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Configuration</h2>

<h4>Config</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Config.ID" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Config.IsFromForeignLanguage" /> @Html.DisplayNameFor(model => model.Config.IsFromForeignLanguage)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Config.BestScore" class="control-label"></label>
                <input readonly="readonly" asp-for="Config.BestScore" class="form-control" />
                <span asp-validation-for="Config.BestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" asp-for="@Model.Config.UserId"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
